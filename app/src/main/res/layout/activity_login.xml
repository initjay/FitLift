<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gymlogin">

    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvNewUser"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:context=".activities.LoginActivity">

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7D02B2"
            android:ems="10"
            android:hint="username"
            android:textColor="#BFAECF"
            android:textColorHint="#BFAECF" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7D02B2"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="#BFAECF"
            android:textColorHint="#BFAECF" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/loginbuttonshape"
            android:shadowColor="#D79B3B"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="Login"
            android:textColor="#EBD23F" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/createaccountbuttonshape"
        android:shadowColor="#D79B3B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="Create Account"
        android:textColor="#EBD23F" />

    <TextView
        android:id="@+id/tvNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCreateUser"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="New User?"
        android:textColor="#BFAECF"
        tools:text="New User?" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="FitLift"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#BFAECF"
        android:textSize="40sp"
        tools:layout_centerHorizontal="true" />

</RelativeLayout>
